{

  "manifest_version": 2,
  "name": "ContrextExplained",
  "version": "1.0",

  "description": "Allows for the addition and modification of keywords. That are inserted into a webpage to further Explain the Content better.",

  "icons": {
    "48": "./icons/logo.png"
  },

  "options_ui": {
    "page": "./html/icon-menu/settings.html",
    "open_in_tab": true
  },

  "web_accessible_resources": [
    "/html/icon-menu/settings.html",
    "/html/icon-menu/controls.html"
  ],

  "browser_action": {
    "browser_style": false,
    "default_icon": "./icons/logo.png",
    "default_title": "Content Explianed",
    "default_popup": "./html/icon-menu/controls.html"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["./index.js"],
      "css": ["./css/index.css",
              "./css/hover-resource.css",
              "./css/lookup.css"]
    }
  ],

  "background": {
    "scripts": ["./src/manual/background.js"]
  },
  "permissions": [
  "<all_urls>",
  "tabs",
  "cookies",
  "notifications",
  "storage",
  "webNavigation",
  "contextMenus",
  "webRequest",
  "webRequestBlocking",
  "activeTab"
  ]

}
